<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Register" android:background="#BEEBFF">

    <TextView
            android:text="Create a new account."
            android:layout_width="242dp"
            android:layout_height="41dp" android:id="@+id/loginText"
            android:textColor="#000000" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/title"/>
    <TextView
            android:text="Register to Novus Biblo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title"
            android:textColor="#000000" android:textSize="60px"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="54dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="86dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="Password" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/email"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/register_button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/confirm_password"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/email"
            android:hint="Email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/loginText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/confirm_password"
            android:hint="Confirm Password" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/password"/>
    <TextView
            android:text="Already registered? Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/registered"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/register_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="125dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>